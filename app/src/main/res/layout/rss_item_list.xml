<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imageRssItemImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        android:contentDescription="@string/rss_feed_image_desc" />

    <TextView
        android:id="@+id/textViewRssItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imageRssItemImage"
        android:layout_alignTop="@+id/imageRssItemImage"
        android:textStyle="bold"
        tools:text="RSS feed item title"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/textViewRssItemLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_alignStart="@+id/textViewRssItemName"
        android:layout_below="@+id/textViewRssItemName"
        android:textStyle="bold"
        tools:text="http://www.example.com" />

    <TextView
        android:id="@+id/textViewRssItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/textViewRssItemLink"
        android:layout_below="@+id/textViewRssItemLink"
        tools:text="RSS feed item description. Here is the description attribute of the element."
        android:layout_toStartOf="@+id/imgBtnEdit" />

    <ImageButton
        android:id="@+id/imgBtnEdit"
        android:layout_width="40dip"
        android:layout_height="40dip"
        app:srcCompat="@android:drawable/ic_menu_edit"
        style="@android:style/Widget.ImageButton"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/imgBtnRemove" />

    <ImageButton
        android:id="@+id/imgBtnRemove"
        android:layout_width="40dip"
        android:layout_height="40dip"
        app:srcCompat="@android:drawable/ic_delete"
        style="@android:style/Widget.ImageButton"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/imgBtnEdit"
        android:layout_alignParentEnd="true" />


</RelativeLayout>